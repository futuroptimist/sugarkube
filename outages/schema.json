{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Outage record",
  "type": "object",
  "required": ["id", "date", "component", "rootCause", "resolution", "references"],
  "properties": {
    "id": { "type": "string" },
    "date": { "type": "string", "format": "date" },
    "component": { "type": "string" },
    "rootCause": { "type": "string" },
    "resolution": { "type": "string" },
    "references": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
